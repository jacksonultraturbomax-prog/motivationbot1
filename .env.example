# Telegram Bot Token (обязательно)
BOT_TOKEN=your_telegram_bot_token_here

# Режим работы: dev (локальная разработка) или prod (Railway)
# По умолчанию: dev
MODE=dev

# Порт для Railway совместимости (Railway автоматически устанавливает PORT)
# По умолчанию: 3000
PORT=3000

# Database file path (optional, defaults to ./data/bot.db)
DB_PATH=./data/bot.db

# Texts file path (optional, defaults to ./data/texts.json)
TEXTS_PATH=./data/texts.json
